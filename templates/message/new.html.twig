
{% extends './base_front.html.twig' %}

{% block body %}

	<section class="account-wrap ptb-100">

		<div class="container">
			<div class="account-form">
        
				{{ form_start(form) }}

				<div>
					<div class="section-title style1 text-center mb-40">
						<h1>Avez-vous des questions?</h1>
						
					</div>
					<div class="row">
						<div class="col-md-612">
							<div class="form-group">


								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="fname">Nom</label>
											{{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':"Entrez votre Nom"}}) }}
											{{ form_errors(form.nom) }}
										</div>
									</div>
                                    <div class="col-md-6">
										<div class="form-group">
											<label for="fname">Prénom</label>
											{{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':"Entrez votre Prénom"}}) }}
											{{ form_errors(form.prenom) }}
										</div>
									</div>

									
									
									<div class="col-md-6">
										<div class="form-outline">
											<label for="description">sujet</label>
											{{ form_widget(form.description,{'attr':{'class':'form-label','rows':'8','placeholder':"Description" }}) }}
											{{ form_errors(form.description) }}
										</div>
										
									</div>
									<button  type="submit" class="btn style1" >Envoyer</button>

									<br>

									<a href="{{ path('app_rendezvous_new') }}" class="btn btn-warning" >Rendez-Vous
									</a>
									

								</div>


							</div>
						</div>

					</div>
					</div>	
					</div>
				</div>





				{{ form_end(form) }}
			</div>
		</div>


	</section>


{% endblock %}

